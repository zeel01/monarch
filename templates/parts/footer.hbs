{{log this}}
<footer class="sheet-footer flexrow">
	{{#if @partial-block}}{{> @partial-block }}{{/if}}
	{{#each buttons as |button|}}
		<button type="{{button.type}}" {{#if button.name}}name="{{button.name}}" {{/if}} class="{{button.cssClass}}"
			{{#if button.action}}data-action="{{button.action}}" {{/if}} {{#if button.disabled}}disabled{{/if}}>
			{{#if button.icon}}<i class="{{button.icon}}" inert></i>{{/if}}
			{{#if button.label}}<span>{{localize button.label}}</span>{{/if}}
		</button>
	{{/each}}
	{{#each appControls as |control|}}
		{{#unless control.hide}}
			<button class="app-control {{control.class}}" title="{{localize control.tooltip}}"
				aria-label="{{#if control.aria}}{{localize control.aria}}{{else}}{{localize control.tooltip}}{{/if}}" {{#if
				control.disabled}}disabled{{/if}} type="button">
				<i class="{{control.icon}}"></i> {{localize control.label}}
			</button>
		{{/unless}}
	{{/each}}
</footer>